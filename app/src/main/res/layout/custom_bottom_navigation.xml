<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view7"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@drawable/back_top_navigation"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/home"
        android:layout_width="110dp"
        android:layout_height="61dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/about"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <View
        android:id="@+id/about"
        android:layout_width="110dp"
        android:layout_height="61dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toStartOf="@+id/home"
        app:layout_constraintStart_toEndOf="@+id/certificate"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <View
        android:id="@+id/certificate"
        android:layout_width="110dp"
        android:layout_height="61dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toStartOf="@+id/about"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_certificate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/img"
        app:layout_constraintBottom_toBottomOf="@+id/certificate"
        app:layout_constraintEnd_toEndOf="@+id/certificate"
        app:layout_constraintStart_toStartOf="@+id/certificate"
        app:layout_constraintTop_toTopOf="@+id/certificate"
        app:srcCompat="@drawable/ic_certificate" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/img"
        app:layout_constraintBottom_toBottomOf="@+id/about"
        app:layout_constraintEnd_toEndOf="@+id/about"
        app:layout_constraintStart_toStartOf="@+id/about"
        app:layout_constraintTop_toTopOf="@+id/about"
        app:srcCompat="@drawable/ic_about" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/img"
        app:layout_constraintBottom_toBottomOf="@+id/home"
        app:layout_constraintEnd_toEndOf="@+id/home"
        app:layout_constraintStart_toStartOf="@+id/home"
        app:layout_constraintTop_toTopOf="@+id/home"
        app:srcCompat="@drawable/ic_home" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_certificate_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/img"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/certificate"
        app:layout_constraintEnd_toEndOf="@+id/certificate"
        app:layout_constraintStart_toStartOf="@+id/certificate"
        app:layout_constraintTop_toTopOf="@+id/certificate"
        app:srcCompat="@drawable/ic_certificate_active" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_about_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/img"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/about"
        app:layout_constraintEnd_toEndOf="@+id/about"
        app:layout_constraintStart_toStartOf="@+id/about"
        app:layout_constraintTop_toTopOf="@+id/about"
        app:srcCompat="@drawable/ic_about_active" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_home_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/img"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/home"
        app:layout_constraintEnd_toEndOf="@+id/home"
        app:layout_constraintStart_toStartOf="@+id/home"
        app:layout_constraintTop_toTopOf="@+id/home"
        app:srcCompat="@drawable/ic_home_active" />

</androidx.constraintlayout.widget.ConstraintLayout>
